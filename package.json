{
  "name": "capstone-2-monorepo",
  "version": "1.0.0",
  "description": "Capstone 2 - Classroom Management System",
  "private": true,
  "scripts": {
    "start": "cd backend && node server.js",
    "start:dev": "concurrently \"cd backend && npm run dev\" \"cd frontend/react-app && npm run dev\"",
    "build:frontend": "cd frontend/react-app && npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
